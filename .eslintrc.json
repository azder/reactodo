{

    "parser": "babel-eslint",

    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": false,
        "node": true,
        "jest": false
    },
    "plugins": [
        "babel"
    ],
    "extends": [
        "plugin:react/recommended",
        "@azhder/azder"
    ],
    "globals": {
        "Promise": false,
        "Symbol": false,
        "Proxy": false,
        "Reflect": false
    },
    "rules": {
        "react/prefer-stateless-function": [
            1,
            {
                "ignorePureComponents": false
            }
        ],
        "no-invalid-this": 0,
        "babel/no-invalid-this": 1
    }
}
